<div class="container login-container" id="tkt">
  <%= image_tag "logo.png", class: "logo" %>
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-login">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form1" id="login-form">
            <%= f.input :email,
              required: false,
              autofocus: true,
              input_html: { autocomplete: "email" }, class:"form" %>
            <%= f.input :password,
              required: false,
              input_html: { autocomplete: "current-password" }, class:"form" %>
          </div>
          <% if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "No account? Sign up!", new_registration_path(resource_name), class:"sign" %><br/>
          <% end %>
          <div class="form-actions ">
            <%= f.button :submit, "Log in", class:"login" %>
          </div>
        <% end %>
      </div>
      <h1>Or connect with</h1>
      <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: "loginBtn loginBtn--facebook" %>
    </div>
  </div>
</div>



