<div class="container login-container" id="tkt">
  <%= image_tag "logo.png", class: "logo" %>
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-login">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form1" id="login-form">
          <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }, class:"form"%>
          <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" }, class:"form"%>
        </div>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot password?", new_password_path(resource_name), class:"forgot" %><br />
<% end -%>
        <div class="form-actions ">
          <%= f.button :submit, "Log in", class:"login" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
<h1>Or connect with</h1>
<button class="loginBtn loginBtn--facebook">
  Login with Facebook
</button>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "No account?Sign up!", new_registration_path(resource_name), class:"sign" %><br />
<% end -%>
</div>



